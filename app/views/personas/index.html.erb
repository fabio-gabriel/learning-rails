<h1>Persona list</h1>

<table class='table table-striped table-dark'>
  <thead class='thead-dark'>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Arcana</th>
      <th scope="col">Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.name %></td>
        <td><%= persona.arcana %></td>
        <td><%= persona.level %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Persona', new_persona_path, class:"btn btn-success"%>

